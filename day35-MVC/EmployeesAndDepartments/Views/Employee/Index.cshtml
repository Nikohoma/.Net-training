@model List<EmployeesAndDepartments.Models.Employee>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<h2>Employee List</h2>

<table border="1" cellpadding="5">
    <tr>
        <th>Name</th>
        <th>Email</th>
        <th>Salary</th>
        <th>Department Id</th>
    </tr>

    @foreach (var emp in Model)
    {
        <tr>
            <td>@emp.FullName</td>
            <td>@emp.Email</td>
            <td>@emp.Salary</td>
            <td>@emp.DepartmentId</td>
        </tr>
    }
</table>