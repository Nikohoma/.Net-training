@model List<FlightSearchEngine.Models.FlightHotelResult>

<h2>Flight + Hotel Results</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Flight Name</th>
            <th>Source</th>
            <th>Destination</th>
            <th>Hotel Name</th>
            <th>Total Cost</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.FlightName</td>
                <td>@item.Source</td>
                <td>@item.Destination</td>
                <td>@item.HotelName</td>
                <td>@item.TotalCost</td>
            </tr>
        }
    </tbody>
</table>